@model Veterinaria_AppWeb.ViewModels.DetalleVentaViewModel

<div class="card p-3 mb-3 border shadow-sm detalle-venta">
    <div class="row g-3 align-items-end">
        <div class="col-md-4">
            <label asp-for="Id_producto" class="form-label">Producto</label>
            <select asp-for="Id_producto"
                    asp-items="Model.ProductosDisponibles"
                    class="form-select producto-select">
                <option value="">-- Ninguno --</option>
            </select>
            <span asp-validation-for="Id_producto" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Id_servicio" class="form-label">Servicio</label>
            <select asp-for="Id_servicio"
                    asp-items="Model.ServiciosDisponibles"
                    class="form-select servicio-select">
                <option value="">-- Ninguno --</option>
            </select>
            <span asp-validation-for="Id_servicio" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <label asp-for="Cantidad" class="form-label"></label>
            <input asp-for="Cantidad" class="form-control" type="number" min="1" required />
            <span asp-validation-for="Cantidad" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <label asp-for="PrecioUnitario" class="form-label"></label>
            <input asp-for="PrecioUnitario" class="form-control" type="number" step="0.01" min="0" required />
            <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
        </div>

       
        <div class="col-md-12 mt-2 text-end">
            <button type="button" class="btn btn-danger btn-sm btn-remove-item">🗑 Quitar</button>
        </div>
    </div>
</div>