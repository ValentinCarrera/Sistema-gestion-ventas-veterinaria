@model Veterinaria_AppWeb.ViewModels.ProductoViewModel
@{
    ViewData["Title"] = "Eliminar Producto";
}

<h1 class="mb-4 text-danger">Eliminar producto</h1>

<p class="text-danger">¿Seguro que querés eliminar este producto?</p>

<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>
    <dt class="col-sm-2">Categoria</dt>
    <dd class="col-sm-10">@Model.Categoria</dd>
    <dt class="col-sm-2">Stock</dt>
    <dd class="col-sm-10">@Model.Stock</dd>
    <dt class="col-sm-2">Precio</dt>
    <dd class="col-sm-10">@Model.Precio.ToString("C")</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id_Producto" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="text-danger mt-3">
        @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@e.ErrorMessage</div>
        }
    </div>
}