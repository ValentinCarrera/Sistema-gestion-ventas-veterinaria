@model Veterinaria_AppWeb.ViewModels.ReposicionStockViewModel
@{
    ViewData["Title"] = "Reposición de Stock";
}

<h2>Reposición de Stock</h2>

<div>
    <p><strong>Producto:</strong> @Model.Nombre</p>
    <p><strong>Stock actual:</strong> @Model.StockActual</p>
</div>

<form asp-action="Reponer" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id_Producto" />

    <div class="mb-3">
        <label asp-for="Cantidad" class="form-label"></label>
        <input asp-for="Cantidad" class="form-control" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="Sumar" class="form-check-input" type="checkbox" />
        <label asp-for="Sumar" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}